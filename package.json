{
  "name": "healthy-life",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "check": "NODE_OPTIONS='--max-old-space-size=8192' astro check",
    "dev": "astro dev",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' astro build",
    "build:check": "NODE_OPTIONS='--max-old-space-size=16384' astro check && NODE_OPTIONS='--max-old-space-size=8192' astro build",
    "type-check": "NODE_OPTIONS='--max-old-space-size=16384' tsc --noEmit",
    "postbuild": "pagefind --site dist --exclude-selectors 'details, #toc, #inhaltsverzeichnis' --output-path ./public/pagefind",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --project unit",
    "test:integration": "echo 'No integration tests available yet. Run bun run test for all tests.'",
    "test:component": "echo 'No component tests available yet. Run bun run test for all tests.'",
    "test:health": "echo 'No health tests available yet. Run bun run test for all tests.'",
    "test:unit:watch": "vitest --project unit",
    "test:integration:watch": "echo 'No integration tests available yet. Run bun run test:watch for all tests.'",
    "test:component:watch": "echo 'No component tests available yet. Run bun run test:watch for all tests.'",
    "test:health:watch": "echo 'No health tests available yet. Run bun run test:watch for all tests.'",
    "test:all": "vitest run",
    "test:unit:coverage": "vitest run --project unit --coverage",
    "test:integration:coverage": "echo 'No integration tests available yet. Run bun run test:coverage for all tests.'",
    "test:component:coverage": "echo 'No component tests available yet. Run bun run test:coverage for all tests.'",
    "test:health:coverage": "echo 'No health tests available yet. Run bun run test:coverage for all tests.'",
    "test:coverage:all": "vitest run --coverage",
    "test:coverage:merge": "node scripts/merge-coverage.js",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html",
    "test:coverage:ci": "vitest run --coverage --reporter=json --reporter=github-actions",
    "test:bun": "bun test",
    "test:bun:coverage": "bun test --coverage",
    "analyze": "node scripts/analyze-bundle.js",
    "build:analyze": "bun run build && bun run analyze",
    "perf:test": "node tests/performance/run-tests.js",
    "docs:generate": "node scripts/generate-component-docs.js",
    "a11y:test": "node tests/accessibility/a11y-test.js",
    "prepare": "husky",
    "deploy": "bun run build && git checkout --orphan gh-pages && git --work-tree dist add --all && git --work-tree dist commit -m 'Deploy' && git push github gh-pages --force && git checkout -f main && git branch -D gh-pages"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/rss": "4.0.12",
    "@astrojs/sitemap": "3.4.1",
    "@iconify-json/tabler": "^1.2.19",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/vite": "^4.1.11",
    "@types/chalk": "^2.2.4",
    "astro": "5.12.0",
    "astro-icon": "^1.1.5",
    "astro-pagefind": "^1.8.3",
    "chalk": "^5.4.1",
    "dayjs": "^1.11.13",
    "hast-util-to-string": "^3.0.1",
    "lodash.kebabcase": "^4.1.1",
    "mdast-util-to-string": "^4.0.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.15.2",
    "sharp": "^0.34.3",
    "slugify": "^1.6.6",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@pagefind/default-ui": "^1.3.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "^1.2.19",
    "@types/lodash.kebabcase": "^4.1.9",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chrome-launcher": "^1.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.0",
    "lint-staged": "^16.1.2",
    "pagefind": "^1.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  }
}
