{
  "name": "wordpress-to-markdown-exporter",
  "version": "1.0.0",
  "description": "A TypeScript tool to convert WordPress export XML to Markdown for Astro",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "wordpress",
    "markdown",
    "astro",
    "converter",
    "exporter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.15",
    "inversify": "^6.0.2",
    "luxon": "^3.4.4",
    "reflect-metadata": "^0.2.1",
    "turndown": "^7.1.2",
    "turndown-plugin-gfm": "^1.0.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.19",
    "@types/turndown": "^5.0.4",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
