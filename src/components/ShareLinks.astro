---
/**
 * Share Links Component
 *
 * Displays social media sharing buttons for the current page/post.
 * Automatically generates share URLs for configured social platforms.
 *
 * Features:
 * - Pre-configured social media platforms from SHARE_LINKS config
 * - Automatic URL generation for current page
 * - Internationalized "Share" label
 * - Accessible with screen reader text
 * - Icon support via astro-icon
 * - Responsive layout (column on mobile, horizontal on desktop)
 * - Hover animations
 *
 * Configured Platforms (from @/socials):
 * - Social networks with sharing functionality
 * - Each platform auto-populates current page URL
 *
 * Usage:
 * ```astro
 * <ShareLinks />
 * ```
 *
 * @component
 */
import { Icon } from "astro-icon/components";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { SHARE_LINKS, type SocialObject } from "@/socials";

import LinkButton from "./elements/LinkButton.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const URL = Astro.url;
---

<div
  class="flex flex-col flex-wrap items-center justify-center gap-1 sm:items-start"
>
  <span class="italic">{`${t("post.share")}:`}</span>
  <div class="text-center">
    {
      SHARE_LINKS.map(
        (social): SocialObject => (
          <LinkButton
            href={`${social.href + URL}`}
            class="scale-90 p-2 hover:rotate-6 sm:p-1"
            title={social.linkTitle}
          >
            {social.icon && social.icon.trim() !== "" && (
              <Icon name={social.icon} size={24} aria-hidden="true" />
            )}
            <span class="sr-only">{social.linkTitle}</span>
          </LinkButton>
        )
      )
    }
  </div>
</div>
