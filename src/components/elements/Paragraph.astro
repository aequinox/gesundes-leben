---
/**
 * Paragraph Component
 *
 * Styled paragraph component with multiple variants and formatting options.
 * Provides consistent typography and spacing for body text.
 *
 * Features:
 * - 4 style variants (default, lead, subtle, accent)
 * - 4 animation options (none, fade, slide, zoom)
 * - Text alignment control
 * - Optional hyphenation
 * - Responsive font sizing
 * - Dark mode support
 *
 * Usage:
 * ```astro
 * <Paragraph>Standard paragraph text</Paragraph>
 * <Paragraph variant="lead">Introductory paragraph</Paragraph>
 * <Paragraph variant="accent">Highlighted text</Paragraph>
 * <Paragraph align="center" animation="fade">Centered animated text</Paragraph>
 * ```
 *
 * @component
 */
export interface Props {
  /** Visual style variant */
  variant?: "default" | "lead" | "subtle" | "accent";
  /** Animation effect */
  animation?: "none" | "fade" | "slide" | "zoom";
  /** Text alignment */
  align?: "left" | "center" | "right" | "justify";
  /** Whether to enable hyphenation */
  hyphenate?: boolean;
  /** Additional CSS classes */
  class?: string;
}

const {
  variant = "default",
  animation = "none",
  align = "left",
  hyphenate = true,
  class: className = "",
} = Astro.props;

const variantClasses = {
  default: "text-base xl:text-lg",
  lead: "text-lg xl:text-xl font-medium",
  subtle: "text-base xl:text-lg text-foreground/70",
  accent: "text-base xl:text-lg border-l-4 border-accent pl-4",
};

const alignClasses = {
  left: "text-left",
  center: "text-center",
  right: "text-right",
  justify: "text-justify",
};

const animationMap = {
  none: "",
  fade: "fade-up",
  slide: "fade-right",
  zoom: "zoom-in",
};

// const animationClass =
//   animation !== "none" ? `data-aos="${animationMap[animation]}"` : "";
const hyphenateClass = hyphenate ? "hyphens-auto" : "";
---

<p
  class:list={[
    "text-base leading-relaxed tracking-wide",
    variantClasses[variant],
    alignClasses[align],
    hyphenateClass,
    className,
  ]}
  {...animation !== "none" && { "data-aos": animationMap[animation] }}
>
  <slot />
</p>
