---
/**
 * Loading Spinner Component
 *
 * A reusable, accessible loading spinner with consistent styling.
 * Replaces duplicated spinner SVGs across the codebase.
 *
 * Features:
 * - Multiple size variants
 * - Accessible with proper ARIA attributes
 * - Consistent animation timing
 * - Respects motion preferences
 * - Uses project's design system
 *
 * @component
 * @example
 * ```astro
 * <LoadingSpinner />
 * <LoadingSpinner size="lg" />
 * <LoadingSpinner size="sm" color="accent" />
 * ```
 */

import { iconStyles } from "@/utils/ui/designSystem";

export interface Props {
  /** Size variant for the spinner */
  size?: "xs" | "sm" | "md" | "lg" | "xl";
  /** Color variant */
  color?: "current" | "accent" | "muted";
  /** Additional CSS classes */
  class?: string;
  /** Accessible label for screen readers */
  ariaLabel?: string;
}

const {
  size = "sm",
  color = "current",
  class: className = "",
  ariaLabel = "LÃ¤dt...",
} = Astro.props;

// Size classes using design system
const sizeClasses = iconStyles.sizes[size];

// Color classes
const colorClasses = {
  current: "text-current",
  accent: "text-accent",
  muted: "text-muted",
};

// Combine classes
const spinnerClasses = [
  "animate-spin",
  "motion-reduce:animate-none",
  ...sizeClasses,
  ...iconStyles.common,
  colorClasses[color],
  className,
]
  .filter(Boolean)
  .join(" ");
---

<svg
  class={spinnerClasses}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  role="status"
  aria-label={ariaLabel}
  aria-hidden="false"
>
  <!-- Background circle with reduced opacity -->
  <circle
    class="opacity-25"
    cx="12"
    cy="12"
    r="10"
    stroke="currentColor"
    stroke-width="4"></circle>

  <!-- Animated progress arc -->
  <path
    class="opacity-75"
    fill="currentColor"
    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
  ></path>

  <!-- Screen reader text -->
  <title>{ariaLabel}</title>
</svg>
