---
/**
 * Pagination Component (Basic)
 *
 * Simple pagination navigation for blog post lists.
 * Displays previous/next buttons with current page indicator.
 *
 * Features:
 * - Previous/Next navigation buttons
 * - Current page / total pages indicator
 * - Disabled state for unavailable directions
 * - SEO-friendly prev/next link tags
 * - Prefetch on hover for better UX
 * - Accessible navigation with ARIA labels
 * - Auto-hidden when only one page exists
 *
 * Usage:
 * ```astro
 * ---
 * const page = await getCollection('blog', postFilter).paginate(posts, { pageSize: 10 });
 * ---
 * <Pagination page={page} />
 * ```
 *
 * Note: For more advanced pagination with glassmorphism styling,
 * see src/components/sections/Pagination.astro
 *
 * @component
 */
import type { Page } from "astro";

import IconArrowLeft from "@/assets/icons/IconArrowLeft.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import type { Post } from "@/utils/types";

import LinkButton from "./elements/LinkButton.astro";

export interface Props {
  /** Astro pagination page object containing posts and pagination metadata */
  page: Page<Post>;
}

const { page } = Astro.props;
---

{
  page.lastPage > 1 && (
    <nav class="mt-auto mb-8 flex justify-center" aria-label="Pagination">
      {page.url.prev && <link rel="prev" href={page.url.prev} />}
      {page.url.next && <link rel="next" href={page.url.next} />}
      <LinkButton
        disabled={!page.url.prev}
        href={page.url.prev as string}
        class:list={["mr-4 select-none", { "opacity-50": !page.url.prev }]}
        ariaLabel="Previous"
        data-astro-prefetch="hover"
      >
        <IconArrowLeft class="inline-block" />
        Prev
      </LinkButton>
      {page.currentPage} / {page.lastPage}
      <LinkButton
        disabled={!page.url.next}
        href={page.url.next as string}
        class:list={["ml-4 select-none", { "opacity-50": !page.url.next }]}
        ariaLabel="Next"
        data-astro-prefetch="hover"
      >
        Next
        <IconArrowRight class="inline-block" />
      </LinkButton>
    </nav>
  )
}
