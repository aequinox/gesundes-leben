---
interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  classes?: Record<string, string>;
}

const {
  title = await Astro.slots.render("title"),
  subtitle = await Astro.slots.render("subtitle"),
  tagline,
  classes = {},
}: Props = Astro.props;

const {
  container: containerClass = "max-w-3xl",
  title: titleClass = "text-3xl md:text-4xl ",
  subtitle: subtitleClass = "text-skin-muted text-xl",
} = classes;
---

{
  (title || subtitle || tagline) && (
    <div
      class:list={[
        "not-prose mb-8 text-center md:mx-auto md:mb-12",
        containerClass,
      ]}
    >
      {tagline && (
        <p
          class="text-base font-semibold uppercase tracking-wider text-skin-muted"
          set:html={tagline}
        />
      )}
      {title && (
        <h2
          class:list={[
            "font-heading text-heading text-2xl font-semibold leading-tighter tracking-tighter text-skin-base",
            titleClass,
          ]}
          set:html={title}
        />
      )}

      {subtitle && (
        <p class:list={["mt-4", subtitleClass]} set:html={subtitle} />
      )}
    </div>
  )
}
