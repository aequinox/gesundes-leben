---
/**
 * CardFooter Component
 * Displays the "Read More" link with animations
 */

import { Icon } from "astro-icon/components";

export interface Props {
  href: string;
  title: string;
  isSmall: boolean;
}

const { href, title, isSmall } = Astro.props;

// Read more classes
const readMoreClasses = `group mr-2 mt-${
  isSmall ? "2" : "4"
} text-sm font-bold uppercase tracking-wider relative overflow-hidden text-accent transition-colors duration-200`;
---

<div class={`mt-auto ${isSmall ? "pt-2" : "pt-6"} card-footer`}>
  <a href={href} class={readMoreClasses} aria-label={`Read more about ${title}`}>
    <span class="card-read-more relative inline-flex items-center gap-2">
      <span
        class="card-shine pointer-events-none absolute inset-0 -translate-x-full rotate-35 bg-linear-to-r from-transparent via-white/30 to-transparent opacity-0 transition-opacity duration-200"
      >
      </span>
      <span
        class="card-read-more-text relative z-10 transition-transform duration-300 ease-out"
      >
        Weiterlesen
      </span>
      <span
        class="card-read-more-icon-container relative z-10 inline-block overflow-hidden rounded-full bg-accent/10 p-1 transition-all duration-300 ease-out group-hover:translate-x-1"
      >
        <Icon
          name="tabler:arrow-right"
          class="card-read-more-icon h-4 w-4 transition-all duration-300 ease-out group-active:hidden"
          aria-hidden="true"
        />
        <Icon
          name="tabler:loader-2"
          class="card-read-more-spinner hidden h-4 w-4 animate-spin group-active:inline-block"
          aria-hidden="true"
        />
      </span>
    </span>
  </a>
</div>
