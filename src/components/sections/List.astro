---
interface Item {
  intro?: string;
  content: string;
}

interface Props {
  title?: string;
  items: Item[];
  titleClasses?: string;
}

const { title, items, titleClasses }: Props = Astro.props;
---

<style lang="css">
  .wave-divider {
    @apply absolute bottom-0 left-0 w-[calc(100%+1.5px)] rotate-180 transform overflow-hidden leading-none;
  }

  .wave-divider svg {
    @apply relative block h-16 w-full rotate-180 overflow-hidden;
  }

  .wave-divider .shape-fill {
    @apply fill-skin-fill;
  }

  .list-icon {
    @apply stroke-skin-accent stroke-2;
  }
</style>

<section
  class="relative mx-auto -mb-4 mt-8 box-border overflow-hidden hyphens-auto rounded-md bg-gradient-to-b from-skin-card via-skin-card/50 to-transparent p-6 text-lg"
  data-aos="fade-up"
>
  {
    title && (
      <div class:list={["text-2xl font-normal text-skin-base", titleClasses]}>
        {title}
      </div>
    )
  }
  <div class="wave-divider">
    <svg
      data-name="Layer 1"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1200 120"
      preserveAspectRatio="none"
    >
      <path
        d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19c-82.26-17.34-168.06-16.33-250.45.39-57.84,11.73-114,31.07-172,41.86A600.21,600.21,0,0,1,0,27.35V120H1200V95.8C1132.19,118.92,1055.71,111.31,985.66,92.83Z"
        class="shape-fill"></path>
    </svg>
  </div>
  <div class="prose mx-auto w-full max-w-content px-4">
    <ul class="mb-20">
      {
        items.map((item: Item) => (
          <li>
            {item.intro && (
              <strong class="font-semibold">{item.intro}:&nbsp;</strong>
            )}
            {item.content}
          </li>
        ))
      }
    </ul>
  </div>
</section>
