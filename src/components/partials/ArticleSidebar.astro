---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!-- Table of Contents Sidebar -->
<aside
  id="toc-sidebar"
  data-pagefind-ignore="all"
  class="fixed top-24 hidden h-auto rounded-xl border border-white/20 bg-card/80 shadow-elevation-medium backdrop-blur-md 2xl:col-span-4 2xl:block"
  aria-label="Table of contents"
  style="position: fixed; height: calc(100vh - 120px); right: max(2rem, calc((100vw - 1600px) / 2)); width: 400px; z-index: 30; transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.2s ease-out;"
>
  <!-- Mobile Progress Bar -->
  <div
    id="progress-mobile"
    class="fixed top-0 left-0 h-2 w-full bg-gradient-to-r from-accent/30 to-accent md:hidden"
    role="progressbar"
    aria-label="Reading progress mobile"
    aria-valuemin="0"
    aria-valuemax="100"
    aria-valuenow="0"
  >
  </div>

  <!-- Desktop Progress Bar -->
  <div id="pin" class="hidden md:block">
    <div class="mx-4 overflow-hidden">
      <div
        id="progress-aside"
        class="h-px w-full bg-gradient-to-r from-accent/50 to-accent"
        role="progressbar"
        aria-label="Reading progress sidebar"
        aria-valuemin="0"
        aria-valuemax="100"
        aria-valuenow="0"
      >
      </div>
    </div>

    <!-- TOC Navigation -->
    <nav
      id="toc"
      class="scrollbar mx-4 mt-4 h-full overflow-y-auto rounded-lg bg-gradient-to-b from-transparent via-card/5 to-card/10 px-4 py-4"
      aria-label="Table of contents"
      style="height: calc(100vh - 180px); max-height: calc(100vh - 180px);"
    >
      <h2 class="mb-4 text-base font-medium text-foreground" id="toc-heading">
        {t("toc.title")}
      </h2>
      <ul
        class="space-y-1 text-sm text-pretty [&>li]:flex [&>li]:items-center [&>li]:text-sm [&>li]:leading-tight [&>li]:text-foreground/70 [&>li]:transition-all [&>li]:duration-300 [&>li]:ease-[cubic-bezier(0.4,0,0.2,1)] [&>li.selected]:scale-[1.02] [&>li.selected]:font-medium [&>li.selected]:text-accent [&>li.selected]:opacity-100 [&>li.selected>svg]:mr-2 [&>li.selected>svg]:h-4 [&>li.selected>svg]:w-4 [&>li.selected>svg]:text-accent [&>li.selected>svg]:transition-all [&>li.selected>svg]:duration-400 [&>li.selected>svg]:ease-[cubic-bezier(0.4,0,0.2,1)] [&>li>a]:block [&>li>a]:rounded-md [&>li>a]:py-1 [&>li>a]:transition-all [&>li>a]:duration-200 [&>li>a]:ease-in-out [&>li>a]:hover:scale-[1.01] [&>li>a]:hover:bg-accent/5 [&>li>a]:hover:text-accent [&>li>svg]:h-0 [&>li>svg]:w-0"
        role="list"
        aria-labelledby="toc-heading"
      >
      </ul>
    </nav>
  </div>
</aside>

<script>
  import {
    BackToTopButton,
    ScrollProgress,
  } from "@/utils/ui/TableOfContentsEngine";

  class FloatingTOC {
    private sidebar: HTMLElement | null;
    private article: HTMLElement | null;
    private lastScrollY: number = 0;
    private ticking: boolean = false;
    private initialTop: number = 96; // 24 * 4 = 96px (top-24)
    private scrollOffset: number = 0;

    constructor() {
      this.sidebar = document.getElementById("toc-sidebar");
      this.article = document.querySelector("article");
      this.initialize();
    }

    private initialize(): void {
      if (!this.sidebar) return;

      // Add floating class for styling
      this.sidebar.classList.add("floating");

      // Set initial position
      this.updatePosition();

      // Add scroll listener
      window.addEventListener("scroll", () => this.handleScroll(), {
        passive: true,
      });

      // Handle resize
      window.addEventListener("resize", () => this.updatePosition(), {
        passive: true,
      });

      // Hide/show based on article visibility
      this.checkArticleVisibility();
    }

    private handleScroll(): void {
      if (this.ticking) return;

      this.ticking = true;
      requestAnimationFrame(() => {
        this.updateFloatingPosition();
        this.ticking = false;
      });
    }

    private updateFloatingPosition(): void {
      if (!this.sidebar || !this.article) return;

      const currentScrollY = window.scrollY;
      const scrollDelta = currentScrollY - this.lastScrollY;

      // Apply some smoothing to the scroll offset
      this.scrollOffset += scrollDelta * 0.08;

      // Constrain the offset to reasonable bounds
      const maxOffset = 80;
      this.scrollOffset = Math.max(
        -maxOffset,
        Math.min(maxOffset, this.scrollOffset)
      );

      // Enhanced transform with subtle scale and rotation
      const scale = 1 + Math.abs(this.scrollOffset) * 0.0001;
      const rotation = this.scrollOffset * 0.01;
      this.sidebar.style.transform = `translateY(${this.scrollOffset}px) scale(${scale}) rotateX(${rotation}deg)`;

      // Enhanced opacity with smoother transitions
      const scrollSpeed = Math.abs(scrollDelta);
      const opacity = Math.max(0.85, 1 - scrollSpeed * 0.008);
      this.sidebar.style.opacity = opacity.toString();

      // Add subtle blur effect during fast scrolling
      const blurAmount = Math.min(2, scrollSpeed * 0.1);
      this.sidebar.style.filter = `blur(${blurAmount}px)`;

      this.lastScrollY = currentScrollY;

      // Reset effects after a short delay
      setTimeout(() => {
        if (this.sidebar) {
          this.sidebar.style.opacity = "1";
          this.sidebar.style.filter = "blur(0px)";
        }
      }, 200);
    }

    private updatePosition(): void {
      if (!this.sidebar) return;

      // Ensure the sidebar stays within viewport bounds
      const viewportHeight = window.innerHeight;
      const sidebarHeight = this.sidebar.offsetHeight;

      if (sidebarHeight > viewportHeight - this.initialTop) {
        this.sidebar.style.height = `${viewportHeight - this.initialTop - 20}px`;
      }
    }

    private checkArticleVisibility(): void {
      if (!this.sidebar || !this.article) return;

      const observer = new IntersectionObserver(
        entries => {
          entries.forEach(entry => {
            if (this.sidebar) {
              if (entry.isIntersecting) {
                this.sidebar.style.opacity = "1";
                this.sidebar.style.transform = "translateX(0)";
              } else {
                // Fade out when article is not visible
                this.sidebar.style.opacity = "0.6";
              }
            }
          });
        },
        {
          threshold: 0.1,
          rootMargin: "0px 0px -20% 0px",
        }
      );

      observer.observe(this.article);
    }
  }

  document.addEventListener("astro:page-load", () => {
    // Import and initialize the TableOfContents class
    import("@/utils/ui/TableOfContentsEngine").then(({ TableOfContents }) => {
      new TableOfContents();
    });

    const scrollProgress = new ScrollProgress();
    window.addEventListener("scroll", () => scrollProgress.update(), {
      passive: true,
    });

    new BackToTopButton();
    new FloatingTOC();
  });
</script>

<style>
  @reference "@/styles/global.css";

  .scrollbar {
    scrollbar-width: none;
  }

