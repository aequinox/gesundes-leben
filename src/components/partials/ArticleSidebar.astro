    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  } */

  /* .dark #toc-sidebar {
    background: rgba(0, 0, 0, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  } */

  /* #toc-sidebar.floating {
    transform-origin: center;
    will-change: transform, opacity;
  } */

  /* @media (max-width: 1536px) {
    #toc-sidebar {
      display: none !important;
    }
  } */

  /* Enhanced entrance animation */
  #toc-sidebar {
    animation: slideInFloating 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  @keyframes slideInFloating {
    0% {
      transform: translateX(100%) translateY(-20px) scale(0.95);
      opacity: 0;
      filter: blur(4px);
    }
    60% {
      transform: translateX(-10px) translateY(0) scale(1.02);
      opacity: 0.8;
      filter: blur(1px);
    }
    100% {
      transform: translateX(0) translateY(0) scale(1);
      opacity: 1;
      filter: blur(0);
    }
  }

  /* Hover effect for the entire sidebar */
  #toc-sidebar:hover {
    transform: translateY(-2px) scale(1.005);
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04),
      0 0 0 1px rgba(255, 255, 255, 0.1);
  }

  /* Progress bar enhancement */
  #progress-aside {
    background: linear-gradient(
      90deg,
      transparent 0%,
      oklch(var(--color-accent) / 0.3) 20%,
      oklch(var(--color-accent)) 50%,
      oklch(var(--color-accent) / 0.3) 80%,
      transparent 100%
    );
    height: 2px;
    border-radius: 1px;
  }

  /* TOC heading enhancement */
  #toc-heading {
    color: oklch(var(--color-foreground));
    font-weight: 600;
    letter-spacing: 0.025em;
  }

  /* Enhanced TOC link styling */
  #toc ul li a {
    position: relative;
    overflow: hidden;
  }

  #toc ul li a::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      oklch(var(--color-accent) / 0.1),
      transparent
    );
    transition: left 0.5s ease;
  }

  #toc ul li a:hover::before {
    left: 100%;
  }

  /* Active state indicator */
  #toc ul li.selected a::after {
    content: "";
    position: absolute;
    left: -6px;
    top: 50%;
    width: 3px;
    height: 60%;
    background: oklch(var(--color-accent));
    border-radius: 0 2px 2px 0;
    transform: translateY(-50%);
    animation: slideInLeft 0.3s ease;
  }

  @keyframes slideInLeft {
    from {
      width: 0;
      opacity: 0;
    }
    to {
      width: 3px;
      opacity: 1;
    }
  }

  /* Dark mode border enhancement */
  @media (prefers-color-scheme: dark) {
    #toc-sidebar {
      border-color: rgba(255, 255, 255, 0.1);
    }
  }

  /* TOC Heading Level Indentation */
  #toc ul li.toc-level-h1 a {
    font-weight: 600;
    font-size: 0.9rem;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    border-left: 3px solid transparent;
  }

  #toc ul li.toc-level-h2 a {
    font-weight: 500;
    font-size: 0.85rem;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    border-left: 2px solid #e5e7eb;
  }

  #toc ul li.toc-level-h3 a {
    font-weight: 400;
    font-size: 0.8rem;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    border-left: 1px solid #e5e7eb;
    opacity: 0.8;
  }

  #toc ul li.toc-level-h4 a {
    font-weight: 400;
    font-size: 0.75rem;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    border-left: 1px solid #e5e7eb;
    opacity: 0.7;
    font-style: italic;
  }

  /* Selected state adjustments for different levels */
  #toc ul li.toc-level-h1.selected a {
    border-left-color: hsl(var(--accent));
    background: linear-gradient(90deg, hsl(var(--accent) / 0.1), transparent);
  }

  #toc ul li.toc-level-h2.selected a {
    border-left-color: hsl(var(--accent));
    background: linear-gradient(90deg, hsl(var(--accent) / 0.08), transparent);
  }

  #toc ul li.toc-level-h3.selected a {
    border-left-color: hsl(var(--accent));
    background: linear-gradient(90deg, hsl(var(--accent) / 0.06), transparent);
  }

  #toc ul li.toc-level-h4.selected a {
    border-left-color: hsl(var(--accent));
    background: linear-gradient(90deg, hsl(var(--accent) / 0.04), transparent);
  }

  /* Hover states for different levels */
  #toc ul li.toc-level-h1 a:hover {
    border-left-color: hsl(var(--accent) / 0.6);
  }

  #toc ul li.toc-level-h2 a:hover {
    border-left-color: hsl(var(--accent) / 0.5);
  }

  #toc ul li.toc-level-h3 a:hover {
    border-left-color: hsl(var(--accent) / 0.4);
  }

  #toc ul li.toc-level-h4 a:hover {
    border-left-color: hsl(var(--accent) / 0.3);
  }

  /* Reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    #toc-sidebar,
    #toc-sidebar:hover,
    #toc ul li a::before,
    #toc ul li.selected a::after {
      animation: none !important;
      transition: none !important;
      transform: none !important;
    }
  }
</style>
