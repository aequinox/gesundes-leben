---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/sections/Header.astro";
import Footer from "@/components/sections/Footer.astro";
import Pagination from "@/components/sections/Pagination.astro";
import Card from "@/components/sections/Card.astro";
import { SITE } from "@/config";
import { postService } from "@/services/content/PostService";
import type { CollectionEntry } from "astro:content";
import type { Page } from "astro";

interface Props {
  page: Page<CollectionEntry<"blog">>;
}

export async function getStaticPaths({ paginate }: { paginate: Function }) {
  const posts = await postService.getAllPosts();
  const sortedPosts = await postService.getSortedPosts(posts);
  return paginate(sortedPosts, { pageSize: SITE.postPerPage });
}

const { page } = Astro.props as Props;
---

<Layout title={SITE.title}>
  <Header />
  <main id="main-content">
    <section id="posts">
      <h1>Blog</h1>
      <ul>
        {page.data.map(post => <Card post={post} />)}
      </ul>
    </section>
  </main>

  <Pagination
    currentPage={page.currentPage}
    totalPages={page.lastPage}
    prevUrl={page.url.prev ?? ""}
    nextUrl={page.url.next ?? ""}
  />
  <Footer />
</Layout>

<style>
  /* ... existing styles ... */
</style>
